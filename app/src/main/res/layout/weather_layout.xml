<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weather_layout"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/weather_layout_color">

    <TextView
        android:id="@+id/weather_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:text="@string/XX"
        android:gravity="center"
        android:layout_margin="5sp"/>

    <ImageView
        android:id="@+id/weather_cond_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:src="@drawable/blank_picture"
        android:layout_margin="5sp"/>

    <TextView
        android:id="@+id/weather_tmp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:text="@string/XX"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_margin="5sp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <TextView
            android:id="@+id/weather_county"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/XX" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/weather_cond_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:text="@string/XX"
                android:textSize="10sp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hum"
                android:layout_margin="2sp"/>

            <TextView
                android:id="@+id/weather_cond_hum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="@string/XX"
                android:textSize="10sp"
                android:layout_margin="2sp"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"/>

</LinearLayout>
