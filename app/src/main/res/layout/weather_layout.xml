<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/dialogue_layout_recyclerview_color">

    <ImageView
        android:id="@+id/main_bing_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/weather_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/weather_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/XX"
            android:textColor="@color/weather_text_color"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/weather_cond_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="2"
            android:src="@drawable/blank_picture" />

        <TextView
            android:id="@+id/weather_tmp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/XX"
            android:textColor="@color/weather_text_color"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/weather_county"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/XX"
                android:textColor="@color/weather_text_color" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/weather_cond_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:text="@string/XX"
                    android:textColor="@color/weather_text_color"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:src="@drawable/hum" />

                <TextView
                    android:id="@+id/weather_cond_hum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:text="@string/XX"
                    android:textColor="@color/weather_text_color"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4" />

    </LinearLayout>
</FrameLayout>