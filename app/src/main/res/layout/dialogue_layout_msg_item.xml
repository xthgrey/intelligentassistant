<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10sp">

    <LinearLayout
        android:id="@+id/dialogue_layout_left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:background="@drawable/dialogue_layout_left_dialog">

        <TextView
            android:id="@+id/dialogue_layout_left_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:textColor="@color/dialogue_layout_left_msg_color"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialogue_layout_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:background="@drawable/dialogue_layout_right_dialog">

        <TextView
            android:id="@+id/dialogue_layout_right_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:textColor="@color/dialogue_layout_right_msg_color"/>

    </LinearLayout>

</LinearLayout>